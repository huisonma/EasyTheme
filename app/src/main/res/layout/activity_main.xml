<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:theme="http://schemas.android.com/apk/res-dynamic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    theme:dynamic_themes="true">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/skin_cover"
        android:scaleType="centerCrop"
        theme:dynamic_themes="true" />

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="火影忍者 Huo Ying Ren Zhe"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/theme_text_size"
        theme:dynamic_themes="true"
        theme:font_family="@string/main_font" />

    <Button
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/selector_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="NARUTO -ナルト-"
        android:textColor="@color/selector_text_color"
        android:textSize="@dimen/theme_text_size"
        theme:dynamic_themes="true"
        theme:font_family="@string/sub_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/title_text_color"
        theme:dynamic_themes="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>